<Window x:Class="BL3SaveEditor.Debug.DebugConsole" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BL3SaveEditor.Debug"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI" mc:Ignorable="d" Title="Debug Console"
        Height="450" Width="450" WindowStyle="ToolWindow"
        Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox Name="textBoxDebug" ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="True"
                IsReadOnlyCaretVisible="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left" adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0.0"
                Margin="0,0,0,55" />
        <Button Content="Download OakTMS" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10"
                Click="Button_Click" Height="30" />

    </Grid>
</Window>
